rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Правила для чат-фото - разрешаем чтение всем, запись только авторизованным
    match /chat_photos/{allPaths=**} {
      allow read: if true; // Разрешаем чтение всем для CORS
      allow write: if request.auth != null;
    }
    
    // Правила для чат-видео - разрешаем чтение всем, запись только авторизованным
    match /chat_videos/{allPaths=**} {
      allow read: if true; // Разрешаем чтение всем для CORS
      allow write: if request.auth != null;
    }
    
    // Общие правила для всех файлов
    match /{allPaths=**} {
      allow read: if true; // Разрешаем чтение всем для CORS
      allow write: if request.auth != null;
    }
  }
}
